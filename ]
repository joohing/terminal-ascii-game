# Exclude stupid stuff when searching with fzf and use faster find
source <(fzf --zsh)
export FZF_DEFAULT_COMMAND="fd --type f --exclude tags --exclude node_modules --exclude .git --exclude obj --exclude .csv"
export FZF_DEFAULT_OPTS="\
    --preview-window 'right:57%' \
    --preview 'bat --style=numbers --line-range :300 {} --color=always {}' \
    --bind 'ctrl-y:preview-up' \
    --bind 'ctrl-e:preview-down' \
    --bind 'ctrl-b:preview-page-up' \
    --bind 'ctrl-f:preview-page-down' \
    --bind 'ctrl-u:preview-half-page-up' \
    --bind 'ctrl-d:preview-half-page-down' \
    --bind 'shift-up:preview-top' \
    --bind 'shift-down:preview-bottom' \
    --bind 'ctrl-a:select-all' \
    --bind 'ctrl-s:deselect-all' \
    --bind 'ctrl-k:half-page-up' \
    --bind 'ctrl-j:half-page-down'"

